<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">LOG IN ! !!</h1>
    <!-- Header for the login form -->
    <div class="col-6 offset-3">
        <!-- Form container -->
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <!-- Login form -->
            <div class="mb-3">
                <!-- Username input field -->
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="" type="text" class="form-control" required>
                <!-- Validation feedback for username -->
                <div class="invalid-feedback">Please Enter A Valid Title</div>
            </div>
            <div class="mb-3">
                <!-- Password input field -->
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="" type="password" class="form-control" required>
                <!-- Validation feedback for password -->
                <div class="invalid-feedback">Please Enter A Valid Title</div>
            </div>
            <!-- Submit button -->
            <button class="btn btn-success">LogIn</button>
        </form>
    </div>
</div>

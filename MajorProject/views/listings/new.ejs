<%=layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body>
    
    <h3>Create A New Listing</h3>
    <br>
<form  class="needs-validation" method="POST" action="/listings/" novalidate enctype="multipart/form-data">
<div  class="mb-3">
<label for="title" class="form-label">Title</label>
<input name="listing[title]"  placeholder="Enter Title" type="text" class="form-control" required >
<div class="invalid-feedback"> Please Enter A Valid Title </div>
<div class="valid-feedback">Title Looks Good ! </div>
</div>

<div class="mb-3">
<label for="description" class="form-label">Description</label>
<textarea name="listing[description]"  placeholder="Enter Description" class="form-control"required></textarea>
<div class="invalid-feedback"> Please Give A Short Description </div>
</div>

<!-- <div class="mb-3">
<label for="image" class="form-label">Image LINK/URL</label>
<input name="listing[image]" placeholder="Enter Image URL/LINK" type="text" class="form-control">

</div> -->



<div class="mb-3">
    <label for="image" class="form-label">Upload Listing Image</label>
    <input name="listing[image]" placeholder="Enter Image URL/LINK" type="file" class="form-control" required>
    
    </div>


<div class="row">
<div class="mb-3 col-md-4">
<label for="price" class="form-label">Price</label>
<input name="listing[price]"  placeholder="Enter Price" type="number" class="form-control" required>
<div class="invalid-feedback"> Price Should Be Valid ! </div>
</div>

<div class="mb-3 col-md-8">
<label for="country" class="form-label">Country</label>
<input name="listing[country]" placeholder="Enter Country Name" type="text" class="form-control" required >
<div class="invalid-feedback"> Country Should Be Valid ! </div>
</div>
</div>



<div class="mb-3">
<label for="location" class="form-label">Location</label>
<input name="listing[location]" required placeholder="Enter Location" type="text" class="form-control" >
<div class="invalid-feedback"> Location Should Be Valid ! </div>
</div>


<button class="btn btn-dark add-btn offset-5 mt-3">Add To Listings</button>
</form>
<br>
</div>
</div>


</body>
